# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Security (minimum 32 characters required)
SITE_SALT=your-secret-salt-here-minimum-32-chars-long
JWT_SECRET=your-jwt-secret-here-minimum-32-chars-long
HMAC_SECRET=your-hmac-secret-here-minimum-32-chars-long

# Database - PostgreSQL (Transactional)
PGHOST=localhost
PGPORT=5432
PG_DATABASE=universal_tracking
PGUSER=postgres
PGPASSWORD=password
PG_SSL=false
PG_POOL_MIN=2
PG_POOL_MAX=10

# Cache - Redis (Real-time/Presence)
REDIS_URL=redis://localhost:6379
REDISHOST=localhost
REDISPORT=6379
REDISPASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=ut:

# Analytics - ClickHouse (OLAP)
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_DATABASE=analytics
CLICKHOUSE_USERNAME=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_SSL=false

# External Services
GEOIP_API_KEY=your-geoip-api-key
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_ACCESS_TOKEN=your-meta-access-token

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Health Check
HEALTH_CHECK_TIMEOUT=5000
